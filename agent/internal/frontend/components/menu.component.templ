package frontend

templ sideBarMenu() {
	<div class="flex flex-col gap-4 bg-zinc-800 min-h-full w-80 pt-14">
		@animation()
		@menuItems()
	</div>
}

templ animation() {
	<div class="bg-zinc-800 flex flex-col items-center px-2.5 relative basis-16">
		<div class="bg-black w-4/5 rounded-sm">
			<div class="w-full h-full" id="lottie-animation"></div>
		</div>
		<div class="p-6 text-center">
			<p class="text-white">'If You Can't Measure It, You Can't Manage It'</p>
		</div>
		<script src="assets/libraries/lottie.min.js"></script>
		<script>
		document.addEventListener( 'DOMContentLoaded', function ()
		{
			lottie.loadAnimation( {
				container: document.getElementById( 'lottie-animation' ),
				renderer: 'svg',
				loop: true,
				autoplay: true,
				path: "assets/animation/Animation - 1712666371830.json"
			} );
		} );
		</script>
	</div>
}

